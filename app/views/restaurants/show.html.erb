
<div class='container'>
  <p>
    <strong><h2><%= @restaurant.name%></h2></strong><br>
    <strong>telephone number: </strong><%=@restaurant.phone_number%><br>
    <strong>address: </strong><%=@restaurant.address%><br>
    <strong>category: </strong><%=@restaurant.category%><br>
  </p>
</div>

<div class='container'>
  <%= link_to "Back to list", restaurants_path, class: "btn btn-danger"%>
</div>

<div class='container'>
  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"> <%= review.content %> <%= review.rating%>/5</li>
    <% end %>
  </ul>
  <br>
</div>

<div class='container'>
  <%= link_to "Add your review", new_restaurant_review_path(@restaurant.id), class: "btn btn-success"%>
</div>
